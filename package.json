{
  "name": "zzdom",
  "version": "0.6.0-SNAPSHOT",
  "main": "index.js",
  "description": "A tiny javascript API that implements only the DOM functions of jquery including chaining.",
  "keywords": [
    "DOM",
    "jquery",
    "tiny",
    "chaining"
  ],
  "bugs": "david.javapagetemplates@gmail.com",
  "license": "LGPL-3.0",
  "author": "David Cana Lopez",
  "contributors": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/davidcana/zzDOM"
  },
  "devDependencies": {
    "esbuild": "^0.25.6",
    "eslint": "9.23.0",
    "google-closure-compiler": "20240317.0.0",
    "grunt": "1.6.1",
    "grunt-contrib-compress": "2.0.0",
    "grunt-contrib-concat": "2.1.0",
    "grunt-contrib-copy": "1.0.0",
    "grunt-contrib-jshint": "3.2.0",
    "grunt-contrib-uglify": "5.2.2",
    "http-server": "14.1.1",
    "qunit": "2.11.2",
    "qunit-composite": "2.0.0",
    "velocity-animate": "1.5.2"
  },
  "scripts": {
    "start": "http-server -p 9000 -c-1",
    
    "build-esm-core": "esbuild ./src/zzDOM-core.js --bundle --outfile=./dist/zzDOM-core-esm.js --format=esm",
    "build-esm-full": "esbuild ./src/zzDOM-full.js --bundle --outfile=./dist/zzDOM-full-esm.js --format=esm",
    "build-cjs-core": "esbuild ./src/zzDOM-core.js --bundle --outfile=./dist/zzDOM-core-cjs.cjs --format=cjs",
    "build-cjs-full": "esbuild ./src/zzDOM-full.js --bundle --outfile=./dist/zzDOM-full-cjs.cjs --format=cjs",
    "build-iife-core": "esbuild ./src/zzDOM-core.js --bundle --outfile=./dist/zzDOM-core-iife.js --format=iife",
    "build-iife-full": "esbuild ./src/zzDOM-full.js --bundle --outfile=./dist/zzDOM-full-iife.js --format=iife",

    "build-esm-core-minify": "esbuild ./src/zzDOM-core.js --bundle --outfile=./dist/zzDOM-core-esm.min.js --format=esm --minify",
    "build-esm-full-minify": "esbuild ./src/zzDOM-full.js --bundle --outfile=./dist/zzDOM-full-esm.min.js --format=esm --minify",
    "build-cjs-core-minify": "esbuild ./src/zzDOM-core.js --bundle --outfile=./dist/zzDOM-core-cjs.min.cjs --format=cjs --minify",
    "build-cjs-full-minify": "esbuild ./src/zzDOM-full.js --bundle --outfile=./dist/zzDOM-full-cjs.min.cjs --format=cjs --minify",
    "build-iife-core-minify": "esbuild ./src/zzDOM-core.js --bundle --outfile=./dist/zzDOM-core-iife.min.js --format=iife --minify",
    "build-iife-full-minify": "esbuild ./src/zzDOM-full.js --bundle --outfile=./dist/zzDOM-full-iife.min.js --format=iife --minify",

    "build-esm-core-gz": "gzip -fk ./dist/zzDOM-core-esm.min.js",
    "build-esm-full-gz": "gzip -fk ./dist/zzDOM-full-esm.min.js",
    "build-cjs-core-gz": "gzip -fk ./dist/zzDOM-core-cjs.min.cjs",
    "build-cjs-full-gz": "gzip -fk ./dist/zzDOM-full-cjs.min.cjs",
    "build-iife-core-gz": "gzip -fk ./dist/zzDOM-core-iife.min.js",
    "build-iife-full-gz": "gzip -fk ./dist/zzDOM-full-iife.min.js",

    "build-esm-core-all": "npm run build-esm-core && npm run build-esm-core-minify && npm run build-esm-core-gz",
    "build-esm-full-all": "npm run build-esm-full && npm run build-esm-full-minify && npm run build-esm-full-gz",
    "build-cjs-core-all": "npm run build-cjs-core && npm run build-cjs-core-minify && npm run build-cjs-core-gz",
    "build-cjs-full-all": "npm run build-cjs-full && npm run build-cjs-full-minify && npm run build-cjs-full-gz",
    "build-iife-core-all": "npm run build-iife-core && npm run build-iife-core-minify && npm run build-iife-core-gz",
    "build-iife-full-all": "npm run build-iife-full && npm run build-iife-full-minify && npm run build-iife-full-gz",

    "build-core-all": "npm run build-esm-core-all && npm run build-cjs-core-all && npm run build-iife-core-all",
    "build-full-all": "npm run build-esm-full-all && npm run build-cjs-full-all && npm run build-iife-full-all",

    "build": "npm run build-core-all && npm run build-full-all"
  }
}
